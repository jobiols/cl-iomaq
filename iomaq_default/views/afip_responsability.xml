<openerp>
    <data>

        <!-- agregar responsability -->
        <record id="view_partner_property_form_afip" model="ir.ui.view">
            <field name="name">IOMAQ: agregar responsabilidad</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="replace">
                </field>

                <field name="parent_id" position="after">
                    <field name="ref" placeholder="Reference/Name fantasy"/>
                </field>

                <field name="website" position="after">
                    <field name="afip_responsability_type_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('is_company','=',False), ('parent_id','!=',False)]}"/>
                </field>

            </field>
        </record>

        <!-- quitar responsability -->
        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">IOMAQ: quitar responsabilidad</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_ar_account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="replace"/>
                <field name="parent_id" position="replace"/>
                <field name="afip_responsability_type_id" position="replace"/>
            </field>
        </record>

    </data>

</openerp>