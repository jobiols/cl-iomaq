<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- modificar el product form view -->
        <record id="product_template_form_view_procurement_button"
                model="ir.ui.view">
            <field name="name">IOMAQ: poner meli code</field>
            <field name="model">product.template</field>
            <field name="inherit_id"
                   ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='sale_condition']" position="after">
                    <group>
                        <field name="meli_code"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- modificar el product tree view -->
        <record id="product_template_tree_view" model="ir.ui.view">
            <field name="name">IOMAQ: modificar product tree view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="volume" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="weight" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="type" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="name" position="before">
                    <field name="default_code"/>
                    <field name="final_price"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
