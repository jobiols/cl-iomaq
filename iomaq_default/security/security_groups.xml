<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.module.category" id="module_iomaq">
            <field name="name">IOMAQ Categ</field>
            <field name="sequence">0</field>
            <field name="visible" eval="0"/>
        </record>

        <!-- GRUPO VENDEDOR -->
        <record id="group_salesman_users" model="res.groups">
            <field name="name">Sales</field>
            <field name="category_id" ref="module_iomaq"/>
            <field name="comment">Grupo para todos los vendedores</field>
            <field name="implied_ids"
                   eval="[
                        (4, ref('base.group_no_one')),
                        (4, ref('base.group_partner_manager')),
                        (4, ref('sale.group_discount_per_so_line')),
                        (4, ref('base.group_sale_salesman')),
                        (4, ref('price_security.group_restrict_prices')),
                         ]"/>
        </record>
        <!--
        base.group_no_one	            Características técnicas
        base.group_partner_manager	    Creación de contactos
        sale.group_discount_per_so_line	Descuentos en líneas
        base.group_sale_salesman	    Mostrar las iniciativas propias
        price_security.group_restrict_prices	Solo ver: precio de venta
        -->

        <!-- GRUPO CAJERO -->
        <record id="group_cashier_users" model="res.groups">
            <field name="name">Caja</field>
            <field name="category_id" ref="module_iomaq"/>
            <field name="comment">Grupo para todos los cajeros</field>
            <field name="implied_ids"
                   eval="[
                            (4, ref('account.group_account_invoice')),
                            (4, ref('sale.group_discount_per_so_line')),
                            (4, ref('account_payment_group.group_choose_payment_type')),
                            (4, ref('price_security.group_restrict_prices')),
                            (4, ref('base.group_sale_manager')),
                            (4, ref('stock_picking_auto.group_stock_picking_auto_cashier')),
                                 ]"/>
        </record>

        <!--

        base.group_no_one	            Características técnicas

        account.group_account_invoice	Facturación
        sale.group_discount_per_so_line	Descuentos en líneas
        account_payment_group.group_choose_payment_type	Elegir Tipo de Pago en Pagos

        #stock.group_locations	        Gestionar múltiples ubicaciones y almacenes

        base.group_sale_manager	        Responsable
        #base.group_sale_salesman	    Mostrar las iniciativas propias
        #base.group_sale_salesman_all_leads	Ver todas las iniciativas

        stock_picking_auto.group_stock_picking_auto_cashier	Cashier

        -->


        <!-- GRUPO ADMINISTRATIVO -->
        <record id="group_administrative_users" model="res.groups">
            <field name="name">Administration</field>
            <field name="category_id" ref="module_iomaq"/>
            <field name="comment">Grupo para los administrativos</field>
            <field name="implied_ids"
                   eval="[
                            (4, ref('account.group_account_manager')),
                            (4, ref('base.group_partner_manager')),
                            (4, ref('sale.group_discount_per_so_line')),
                            (4, ref('account_payment_group.group_choose_payment_type')),
                            (4, ref('account.group_account_invoice')),
                            (4, ref('stock.group_locations')),
                            (4, ref('base.group_sale_manager')),
                            (4, ref('purchase.group_purchase_manager')),
                            (4, ref('stock.group_stock_manager')),
                             ]"/>
        </record>

        <!--
        account.group_account_manager	Asesor
        base.group_partner_manager	Creación de contactos
        sale.group_discount_per_so_line	Descuentos en líneas
        account_payment_group.group_choose_payment_type	Elegir Tipo de Pago en Pagos
        account.group_account_invoice	Facturación
        stock.group_locations	Gestionar múltiples ubicaciones y almacenes
        base.group_sale_manager	Responsable
        purchase.group_purchase_manager	Responsable
        stock.group_stock_manager	Responsable
                -->

        <!-- GRUPO SUPERVISOR -->
        <record id="group_supervisor_users" model="res.groups">
            <field name="name">Supervisor</field>
            <field name="category_id" ref="module_iomaq"/>
            <field name="comment">Grupo para todos los supervisores</field>
            <field name="implied_ids"
                   eval="[
                            (4, ref('account.group_account_manager')),
                            (4, ref('base.group_partner_manager')),
                            (4, ref('sale.group_discount_per_so_line')),
                            (4, ref('account_payment_group.group_choose_payment_type')),
                            (4, ref('account.group_account_invoice')),
                            (4, ref('stock.group_locations')),
                            (4, ref('base.group_sale_manager')),
                            (4, ref('purchase.group_purchase_manager')),
                            (4, ref('stock.group_stock_manager')),
                             ]"/>
        </record>

    </data>
</openerp>
